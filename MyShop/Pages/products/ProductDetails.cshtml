@page "{id:int}"
@model ProductDetailsModel
@{
}
<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <title>Автобусная Компания "Столичная"</title>
    <link rel="stylesheet" href="styles.css">
</head>
<body>



    <div class="content">
        @if (User.Identity.IsAuthenticated)
        {
            <aside class="sidebar">
                <a href="/Index">Главная</a>
                <a href="/About">О нас</a>
                <a href="/Catalog">Каталог</a>
                <a href="/Contacts">Контакты</a>
                <a href="/Feedback">Отзывы</a>
                <a href="/pdf/privacy-policy.pdf" target="_blank">Политика конфиденциальности</a>
            </aside>
        }
        else
        {
            <aside class="sidebar">
                <a href="/Index">Главная</a>
                <a href="/About">О нас</a>
                <a href="/Catalog">Каталог</a>
                <a href="/Contacts">Контакты</a>
                <a href="/pdf/privacy-policy.pdf" target="_blank">Политика конфиденциальности</a>
            </aside>
        }

        <main class="product-page">

           

            @if (Model.Product != null)
            {
                <h2>@Model.Product.Name</h2>
                <img src="/@Model.Product.ImagePath" alt="@Model.Product.Name" class="product-detail-img">

                @if (Model.Product.Id == 1)
                {
                                    <p>@Model.ProductDescription1</p>
                }

                @if (Model.Product.Id == 2)
                {
                                    <p>@Model.ProductDescription2</p>
                }

                @if (Model.Product.Id == 3)
                {
                            <p>@Model.ProductDescription3</p>
                }

                @if (Model.Product.Id == 4)
                {
                    <p>@Model.ProductDescription4</p>
                }

                @if (Model.Product.Id == 5)
                {
                            <p>@Model.ProductDescription5</p>
                }

                @if (Model.Product.Id == 0)
                {
                            <p>@Model.ProductDescription0</p>
                }
                @if (Model.Product.Id == 6)
                {
                    <p>@Model.ProductDescription6</p>
                }
                @if (Model.Product.Id == 7)
                {
                    <p>@Model.ProductDescription7</p>
                }
                @if (Model.Product.Id == 8)
                {
                    <p>@Model.ProductDescription8</p>
                }
                @if (Model.Product.Id == 9)
                {
                    <p>@Model.ProductDescription9</p>
                }
                <p class="product-price">Цена: @Model.Product.Price ₽</p>
                @if (User.Identity.IsAuthenticated)
                {
                    <form method="post" asp-page-handler="AddToCart">
                        <input type="hidden" name="productId" value="@Model.Product.Id" />
                    <button type="submit" class="add-to-cart-button">Добавить в корзину</button>
                </form>
                }
                <a href="/Catalog" class="back-link">Вернуться в каталог</a>
            }
            else
            {
                <h2>Товар не найден</h2>
                <p>К сожалению, товар с указанным ID не найден.</p>
                <a href="/Catalog" class="back-link">Вернуться в каталог</a>
            }
        </main>

       
    </div>

    <footer>
        <hr>
        <p>© Все права защищены</p>
    </footer>


</body>
</html>